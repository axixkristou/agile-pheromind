    <style>
        .slide {
            display: none;
            animation: fadeIn 0.5s ease-in-out;
        }
        .slide.active {
            display: block;
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        .progress-bar {
            height: 5px;
            background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 100%);
            transition: width 0.3s ease;
        }
        .bullet-point {
            position: relative;
            padding-left: 1.5rem;
        }
        .bullet-point:before {
            content: "•";
            position: absolute;
            left: 0;
            color: #8b5cf6;
            font-weight: bold;
        }
        .role-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            background-color: #8b5cf6;
            color: white;
            margin-right: 0.5rem;
        }
    </style>
